<h1 class="title"><%= page.title %></h1>
<!-- TODO: timestamp, author, tags(?) -->
<div id="blog-post">
    <%- page.content %>

    <div class="pagination"><!-- TODO: move to partial(?) -->
        <!-- TODO: check if lang is current site lang -->
        <% if (page.next) { %>
            <a class="pull left" href="<%- url_for(page.next.path) %>">Prev</a>
        <% } %>
        <% if (page.prev) { %>
            <a class="pull right" href="<%- url_for(page.prev.path) %>">Next</a>
        <% } %>
    </div>
</div>
